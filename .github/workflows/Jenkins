pipeline {
  agent any

  stages {
    stage('Build Docker Image') {
      steps {
        script {
          docker.build("fastapi")
        } 
      }
    }
    stage('Push Docker Image') {
      steps {
        script {
          docker.withRegistry('https://hub.docker.com/repository/docker/rockodilu/fastapi/general', '${{secrets.DOCKER_PASSWORD}}') {
            docker.image("fastapi").push("latest")
          }
        }
      }
    }

    stage('Deploy to Kubernetes') {
      steps {
        script {  
          kubernetesDeploy(
            kubeconfigId: 'kubeconfigId',
            configs: '*.yml',
            enableConfigSubstitution: true
          )
        }
      }
    }
  }
}
